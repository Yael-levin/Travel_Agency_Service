@using Travel_Agency_Service.Models
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel_Agency_Service</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travel_Agency_Service.styles.css" asp-append-version="true" />
</head>

<body>
    <div id="top"></div>

     <input type="hidden"
           id="antiForgeryToken"
           value="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />

    <header>
        <nav class="navbar navbar-expand-lg custom-navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-controller="Trips"
                   asp-action="Trips">

                    <img src="~/images/The Travel Agency logo.png"
                         alt="The Travel Agency Logo"
                         class="navbar-logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Trips"
                               asp-action="Trips">
                                Trips
                            </a>
                        </li>

                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Dashboard"
                                   asp-action="MyTrips">
                                    My Trips
                                </a>
                            </li>
                        }

                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="AdminTrips"
                                   asp-action="Index">
                                    Admin Trips
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="AdminUsers"
                                   asp-action="Index">
                                    Admin Users
                                </a>
                            </li>

                            <li class="nav-item">
                                 <a class="nav-link"
                                 asp-controller="AdminSettings" 
                                 asp-action="Index">
                                    System Rules
                                </a>
                            </li>
                         }

                    </ul>



                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link fw-semibold">
                                    Hello @Context.Session.GetString("UserName")
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Register">
                                    Register
                                </a>
                            </li>

                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @* 🔔 הודעות מערכת *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }
            @inject Travel_Agency_Service.Data.ApplicationDbContext _context

            @{
                var userId = Context.Session.GetInt32("UserId");

                var urgentBooking = userId != null
                ? _context.Bookings.Any(b =>
                b.UserId == userId &&
                b.Status == BookingStatus.Booked &&
                b.IsFromWaitingList &&
                b.PromotedAt.HasValue &&
                b.PromotedAt.Value.AddHours(24) > DateTime.Now)
                : false;
            }

            @if (urgentBooking)
            {
                <div class="alert alert-danger text-center mb-3">
                    ⏰ You have a promoted trip from the waiting list.
                    Please complete payment within 24 hours or it will be cancelled.
                    <a asp-controller="Dashboard"
                       asp-action="MyTrips"
                       class="btn btn-light btn-sm ms-2">
                        Pay now
                    </a>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    
        <footer class="border-top footer text-muted mt-5">
            @if (Context.Session.GetInt32("UserId") != null)
        {
            <div class="text-center mt-2">
                <button class="btn btn-outline-warning btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#addServiceReviewModal">
                    ⭐ Add Service Review
                </button>
            </div>
        }
        </footer>



        @if (Context.Session.GetInt32("UserId") != null)
        {
        <div class="modal fade" id="addServiceReviewModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Add Service Review</h5>
                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <div class="star-rating mb-3 text-center" id="serviceStarRating">
                            <input type="hidden" id="serviceRating" value="0" />

                            <span data-value="1">★</span>
                            <span data-value="2">★</span>
                            <span data-value="3">★</span>
                            <span data-value="4">★</span>
                            <span data-value="5">★</span>
                        </div>



                        <textarea id="serviceComment"
                                  class="form-control mb-2"
                                  rows="3"
                                  placeholder="Your feedback..."></textarea>

                        <div id="serviceReviewError"
                             class="text-danger mb-2"></div>

                        <button class="btn btn-primary w-100"
                                onclick="addServiceReview()">
                            Submit
                        </button>
                    </div>

                </div>
            </div>
        </div>
        }

        <a href="#top"
           class="btn btn-primary fab-btn shadow"
           style="
                position: fixed;
                bottom: 30px;
                right: 30px;
                z-index: 1000;
           "
           title="Back to top">
            ⬆️
        </a>


        <script src="~/js/password_toggle.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>

    

</html>




