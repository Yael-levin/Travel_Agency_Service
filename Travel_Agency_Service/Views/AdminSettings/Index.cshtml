@model Travel_Agency_Service.Models.SystemSettings

<h2 class="text-center mt-4 mb-4">⚙️ System Booking Rules</h2>

<div class="system-rules-card mx-auto">

    <form asp-action="Save" method="post">

    <div class="mb-3">
        <label class="form-label">
            Booking deadline (days before trip)
        </label>
        <input type="number"
               name="bookingDeadlineDays"
               value="@Model.BookingDeadlineDays"
               min="0"
               class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Cancellation deadline (days before trip)
        </label>
        <input type="number"
               name="cancellationDeadlineDays"
               value="@Model.CancellationDeadlineDays"
               min="0"
               class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Reminder before trip (days)
        </label>
        <input type="number"
               name="reminderDaysBeforeTrip"
               value="@Model.ReminderDaysBeforeTrip"
               min="0"
               class="form-control" />
    </div>

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary px-5">
            Save Rules
        </button>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Success"]
    </div>
}
