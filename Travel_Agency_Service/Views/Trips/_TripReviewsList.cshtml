@model IEnumerable<Travel_Agency_Service.Models.TripReview>

@if (!Model.Any())
{
    <p class="text-muted text-center my-3">
        No reviews for this trip yet.
    </p>
}
else
{
    foreach (var r in Model)
    {
        <div class="review-item card p-3 mb-3">

            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <strong>@r.User.FullName</strong>
                    <span class="ms-1 text-warning">
                        @string.Concat(Enumerable.Repeat("⭐", r.Rating))
                    </span>
                </div>

                <small class="text-muted">
                    @r.CreatedAt.ToShortDateString()
                </small>
            </div>

            <p class="mt-2 mb-1">
                @r.Comment
            </p>

            @if (Context.Session.GetString("Role") == "Admin")
            {
                <button class="review-delete-btn"
                        title="Delete review"
                        onclick="deleteTripReview(@r.ReviewId, @r.TripId)">
                    🗑️
                </button>
            }
        </div>
    }
}
